html, body
  margin 0
  padding 0
  overflow hidden
canvas
  width 100%
  height 100%
  outline none

.ball
  width 25px
  height 25px
  background black
  border-radius 50%
  position absolute
  top -10px
  left -10px
  cursor pointer

#paris
  text-align center
  position absolute
  display flex
  align-items center
  justify-content center
  flex-direction column
  right 0
  top 0
  width 500px
  height 100vh
  background #ffffff
  font-family sans-serif
  & h2
    font-size 56px
    margin-bottom 0
    padding 0
  & span
    font-size 28px
    margin-bottom 64px
    font-weight lighter
    display flex
    align-items center
    padding 0
    &.arrondissements
      font-weight 500
      padding 10px 15px
      border-radius 30px
      box-shadow 0px 0px 8px rgba(0, 0, 0, 0.1)
    & img
      margin-right 12px
  & ul
    margin 0
    padding 0
    list-style none
    display flex
    justify-content space-between
    flex-wrap wrap
    width 250px
    & li
      width 40px
      height 40px
      padding 10px
      font-size 32px
      font-weight lighter
      cursor pointer
      &.active
        background pink
        border-radius 50%